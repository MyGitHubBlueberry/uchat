<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:uchat.ViewModels"
             xmlns:controls="using:uchat.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="uchat.Views.LoginWindow"
             x:DataType="vm:LoginWindowViewModel"
             Background="#0e1621">
    <Grid>

        <Border Background="#17212b" 
                Width="320" 
                VerticalAlignment="Center" 
                Padding="30"
                CornerRadius="25"
                BoxShadow="0 10 15 0 #151515">
            
            <StackPanel Spacing="20">
                
                <StackPanel Spacing="5" Margin="0,0,0,10">
                    <TextBlock Text="UCHAT" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Foreground="White"/>
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock Text="USERNAME" FontSize="11" FontWeight="Bold" Foreground="#8E9297"/>
                    <controls:StyledTextBox Name="UsernameTextBox"
                                            Text="{Binding Username}"
                                            Watermark="Enter your username"/>
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock Text="PASSWORD" FontSize="11" FontWeight="Bold" Foreground="#8E9297"/>
                    <controls:StyledTextBox Name="PasswordTextBox"
                                            Text="{Binding Password}"
                                            Watermark="Enter your password"
                                            PasswordChar="â€¢"/>
                </StackPanel>

                <Button Name="LoginButton"
                        Content="Log In"
                        Click="OnLoginButtonClick"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="12"
                        Background="#5865F2" 
                        Foreground="White"
                        FontWeight="Bold"
                        CornerRadius="25"
                        Margin="0,10,0,0">
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                    <TextBlock Text="Need an account?" Foreground="#B9BBBE" FontSize="12"/>
                    <TextBlock Text="Register" Foreground="#EB459E" FontWeight="Bold" Cursor="Hand" FontSize="12"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
