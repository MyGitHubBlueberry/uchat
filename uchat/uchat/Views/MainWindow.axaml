<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:uchat.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:uchat.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="uchat.Views.MainWindow"
             x:DataType="vm:MainWindowViewModel"
             Background="#0e1621">

        <Grid ColumnDefinitions="250, *">

        <Border Margin="10 10 5 10" CornerRadius="25"  Grid.Column="0" Background="#17212b" BorderBrush="#202225" BorderThickness="0,0,1,0">
            <Grid RowDefinitions="Auto, Auto, *">
                <TextBlock Text="UCHAT" 
                           Foreground="White" 
                           FontWeight="Black" 
                           FontSize="24" 
                           Margin="20" 
                           HorizontalAlignment="Center"
                           LetterSpacing="2"/>
                <Button Grid.Column="2"
                            Command="{Binding OpenProfileCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="8"
                            Cursor="Hand"
                            Margin="8,8,0,8"
                            CornerRadius="17.5"
                            VerticalAlignment="Center">
                    <Border Width="35" Height="35" CornerRadius="17.5" Background="#5865F2">
                        <TextBlock Text="{Binding UserName[0]}"
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center" 
                            Foreground="White" 
                            FontWeight="Bold"
                            FontSize="14"/>
                        </Border>
                    </Button>

                <StackPanel Grid.Row="1" Margin="10">
                    <controls:UserSearchBox Watermark="Search users..."
                                            BackgroundColor="#2C303E"
                                            PaddingValue="12,10"
                                            CornerRadiusValue="10"
                                            SearchText="{Binding SearchText}"
                                            SearchResults="{Binding SearchResults}"/>
                    
                    <ItemsControl ItemsSource="{Binding SearchResults}" 
                                  Margin="0,5,0,0"
                                  IsVisible="{Binding SearchResults.Count}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2C303E" 
                                        CornerRadius="10" 
                                        Padding="10" 
                                        Margin="0,2"
                                        Cursor="Hand">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Border Width="35" Height="35" CornerRadius="17.5" Background="#5865F2">
                                            <TextBlock Text="{Binding Name[0]}" 
                                                       VerticalAlignment="Center" 
                                                       HorizontalAlignment="Center" 
                                                       Foreground="White" 
                                                       FontWeight="SemiBold"
                                                       FontSize="13"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="White" 
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Grid.Row="2" Spacing="5" Margin="10">
                        
                    <Border Background="#2C303E" CornerRadius="10" Padding="10" Cursor="Hand">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Border Width="40" Height="40" CornerRadius="20" Background="#5865F2">
                                <TextBlock Text="G" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Test Chat" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Text="online" Foreground="#8899A6" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="Transparent" CornerRadius="10" Padding="10" Opacity="0.7">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Border Width="40" Height="40" CornerRadius="20" Background="#EB459E">
                                <TextBlock Text="N" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Hikita" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Text="was online 1m ago" Foreground="#8899A6" FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" RowDefinitions="60, *, 70">
            <Border CornerRadius="25" Padding="20 0" Margin="5, 10, 10, 10" Grid.Row="0" Background="#17212b" BorderBrush="#202225" BorderThickness="0,0,0,1">
                <Grid ColumnDefinitions="Auto, *, Auto">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="10" Grid.Column="0">
                        <TextBlock VerticalAlignment="Center" Text="#" Foreground="#8899A6" FontSize="20" FontWeight="Light"/>
                        <TextBlock VerticalAlignment="Center" Text="Test Chat" Foreground="White" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" 
                          Name="MessageScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Messages}" Margin="20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,8,0,8">
                                <Grid ColumnDefinitions="Auto,16,*"
                                      IsVisible="{Binding !IsFromCurrentUser}">
                                    
                                    <Border Width="40" Height="40" 
                                            Grid.Column="0"
                                            CornerRadius="20" 
                                            Background="#5865F2" 
                                            VerticalAlignment="Top">
                                        <TextBlock Text="{Binding SenderName[0]}"
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="White" 
                                                   FontWeight="SemiBold"
                                                   FontSize="14"/>
                                    </Border>

                                    <Grid Grid.Column="1"/>

                                    <StackPanel Grid.Column="2" Spacing="4" MaxWidth="500" HorizontalAlignment="Left">
                                        <TextBlock Text="{Binding SenderName}" 
                                                   Foreground="#DCDDDE" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="14"
                                                   Margin="0,0,0,2"/>

                                        <Border Background="#2F3136" 
                                                CornerRadius="0,12,12,12" 
                                                Padding="12"
                                                HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding Content}" 
                                                       Foreground="#DCDDDE" 
                                                       TextWrapping="Wrap" 
                                                       LineHeight="22"
                                                       FontSize="14"/>
                                        </Border>
                                        
                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" 
                                                   Foreground="#72767D" 
                                                   FontSize="11"
                                                   Margin="4,2,0,0"/>
                                    </StackPanel>
                                </Grid>

                                <Grid ColumnDefinitions="*, Auto"
                                      IsVisible="{Binding IsFromCurrentUser}"
                                      HorizontalAlignment="Right">
                                    
                                    <StackPanel Grid.Column="0" 
                                                Spacing="4" 
                                                HorizontalAlignment="Right"
                                                MaxWidth="500"
                                                Margin="0,0,12,0">
                                        <TextBlock Text="{Binding SenderName}" 
                                                   Foreground="#DCDDDE" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="14"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,0,2"/>

                                        <Border Background="#2b5278"
                                                CornerRadius="12,0,12,12"
                                                Padding="12">
                                            <TextBlock Text="{Binding Content}" 
                                                       Foreground="White" 
                                                       TextWrapping="Wrap" 
                                                       LineHeight="22"
                                                       FontSize="14"/>
                                        </Border>
                                        
                                        <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" 
                                                   Foreground="#72767D" 
                                                   FontSize="11"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,2,4,0"/>
                                    </StackPanel>

                                    <Border Grid.Column="1" 
                                            Width="40" Height="40" 
                                            CornerRadius="20" 
                                            Background="#2b5278" 
                                            VerticalAlignment="Top">
                                        <TextBlock Text="{Binding SenderName[0]}"
                                                   VerticalAlignment="Center" 
                                                   HorizontalAlignment="Center" 
                                                   Foreground="White" 
                                                   FontWeight="SemiBold"
                                                   FontSize="14"/>
                                    </Border>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Border Grid.Row="2" Padding="20,10" VerticalAlignment="Center">
                <Grid ColumnDefinitions="*, Auto">
                    <controls:StyledTextBox Grid.Column="0"
                                            Watermark="Type message..."
                                            BackgroundColor="#40444B"
                                            PaddingValue="16,12"
                                            VerticalAlignment="Center"
                                            Text="{Binding MessageText}"
                                            EnterCommand="{Binding SendCommand}"/>
                    <Button Grid.Column="1" Width="45" Height="45" CornerRadius="25" Background="#2b5278" Margin="10,0,0,0" Cursor="Hand" Command="{Binding SendCommand}">
                        <TextBlock Text="âž¤" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    </Button>
                </Grid>
            </Border>
            
        </Grid>
    </Grid>
</UserControl>
