<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:uchat.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="using:uchat.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="uchat.Views.MainWindow"
             x:DataType="vm:MainWindowViewModel"
             Background="#0e1621">

    <Grid ColumnDefinitions="250, *">
        <views:ChatSidebar Grid.Column="0"/>
        <views:ChatContent Grid.Column="1" Name="ChatContent"/>

		<Border IsVisible="{Binding IsReconnecting}"
				Grid.ColumnSpan="2"
				Background="#DD000000"
				ZIndex="9999">
			<StackPanel HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Spacing="20">
				<ProgressBar IsIndeterminate="True"
							 Width="300"
							 Height="6"
							 Foreground="#4A9EFF"/>
				<TextBlock Text="Reconnecting to server..."
						   Foreground="White"
						   FontSize="18"
						   FontWeight="SemiBold"
						   HorizontalAlignment="Center"/>
			</StackPanel>
		</Border>
    </Grid>
</UserControl>
