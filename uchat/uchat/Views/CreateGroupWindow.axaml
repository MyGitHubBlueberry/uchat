<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:uchat.ViewModels"
        xmlns:controls="using:uchat.Views.Controls"
        x:Class="uchat.Views.CreateGroupWindow"
        x:DataType="vm:CreateGroupViewModel"
        Title="Create Group"
        Width="450"
        Height="600"
        MinWidth="400"
        MinHeight="500"
        Background="#2C2F33"
        WindowStartupLocation="CenterOwner"
        CanResize="True">
    
    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="20">
        <TextBlock Grid.Row="0"
                   Text="Create New Group"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="White"
                   Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" Spacing="15">
            <StackPanel Spacing="5">
                <TextBlock Text="Group Name"
                           Foreground="#B9BCC1"
                           FontSize="12"
                           FontWeight="SemiBold"/>
                <controls:StyledInputBase BackgroundColor="#40444B"
                                          CornerRadiusValue="5"
                                          PaddingValue="10">
                    <TextBox Text="{Binding GroupName}"
                             Watermark="Enter group name..."
                             Foreground="White"
                             FontSize="14"/>
                </controls:StyledInputBase>
            </StackPanel>
            
            <StackPanel Spacing="5">
                <TextBlock Text="Description (Optional)"
                           Foreground="#B9BCC1"
                           FontSize="12"
                           FontWeight="SemiBold"/>
                <controls:StyledInputBase BackgroundColor="#40444B"
                                          CornerRadiusValue="5"
                                          PaddingValue="10">
                    <TextBox Text="{Binding GroupDescription}"
                             Watermark="Enter group description..."
                             Foreground="White"
                             FontSize="14"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="60"/>
                </controls:StyledInputBase>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Spacing="10" Margin="0,20,0,0">
            <TextBlock Text="Select Members"
                       Foreground="#B9BCC1"
                       FontSize="12"
                       FontWeight="SemiBold"/>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Background="#40444B"
                          CornerRadius="5"
                          Padding="10"
                          Height="250">
                <ItemsControl ItemsSource="{Binding AvailableUsers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="5"
                                    Padding="10"
                                    Margin="0,2"
                                    Cursor="Hand">
                                <Border.Styles>
                                    <Style Selector="Border">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Transitions">
                                            <Transitions>
                                                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                                            </Transitions>
                                        </Setter>
                                    </Style>
                                    <Style Selector="Border:pointerover">
                                        <Setter Property="Background" Value="#2C2F33"/>
                                    </Style>
                                </Border.Styles>
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <controls:UserAvatar Grid.Column="0"
                                                         Initial="{Binding User.Name[0]}"
                                                         AvatarSize="35"
                                                         AvatarCornerRadius="17.5"
                                                         AvatarFontSize="13"
                                                         Margin="0,0,10,0"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding User.Name}"
                                               Foreground="White"
                                               VerticalAlignment="Center"
                                               FontSize="14"/>
                                    <CheckBox Grid.Column="2"
                                              IsChecked="{Binding IsSelected}"
                                              VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>
        
        <Grid Grid.Row="3" ColumnDefinitions="*,*" Margin="0,20,0,0">
            <Button Grid.Column="0"
                    Content="Cancel"
                    Background="#40444B"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="15,10"
                    CornerRadius="5"
                    FontSize="14"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Stretch"
                    Cursor="Hand"
                    Margin="0,0,5,0"
                    Click="OnCancelClick">
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#4F545C"/>
                    </Style>
                </Button.Styles>
            </Button>
            
            <Button Grid.Column="1"
                    Content="Create Group"
                    Background="#5865F2"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="15,10"
                    CornerRadius="5"
                    FontSize="14"
                    FontWeight="SemiBold"
                    HorizontalAlignment="Stretch"
                    Cursor="Hand"
                    Margin="5,0,0,0"
                    Command="{Binding CreateGroupCommand}"
                    CommandParameter="{Binding $parent[Window]}">
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#4752C4"/>
                    </Style>
                </Button.Styles>
            </Button>
        </Grid>
    </Grid>
</Window>
