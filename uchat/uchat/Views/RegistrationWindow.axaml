<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:uchat.ViewModels"
             xmlns:controls="using:uchat.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="uchat.Views.RegistrationWindow"
             x:DataType="vm:LoginWindowViewModel"
             Background="#0e1621">
    <Grid>

        <Border Background="#17212b" 
                Width="600" 
                VerticalAlignment="Center" 
                Padding="30"
                CornerRadius="25"
                BoxShadow="0 10 15 0 #151515">
            
            <StackPanel Spacing="20">
                
                <StackPanel Spacing="5" Margin="0,0,0,10">
                    <TextBlock Text="UCHAT" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Foreground="White"/>
                </StackPanel>

                <StackPanel Spacing="8">
                    <TextBlock Text="USERNAME" FontSize="11" FontWeight="Bold" Foreground="#8E9297"/>
                    <controls:StyledTextBox Name="UsernameTextBox"
                                            Text="{Binding Username}"
                                            Watermark="Enter your username"
                                            CornerRadiusValue="25"/>
                </StackPanel>

                <Grid ColumnDefinitions="*, 8, *">
                    <StackPanel Grid.Column="0" Spacing="8">
                        <TextBlock Text="PASSWORD" 
                                   FontSize="11" 
                                   FontWeight="Bold" 
                                   Foreground="#8E9297"/>
                        <controls:StyledPasswordBox Name="PasswordTextBox"
                                                    Password="{Binding Password}"
                                                    Watermark="Enter password"
                                                    CornerRadiusValue="25"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Spacing="8">
                        <TextBlock Text="CONFIRM PASSWORD" 
                                   FontSize="11" 
                                   FontWeight="Bold" 
                                   Foreground="#8E9297"/>
                        <controls:StyledPasswordBox Name="ConfirmPasswordTextBox"
                                                    Password="{Binding Password}" 
                                                    Watermark="Repeat password"
                                                    CornerRadiusValue="25"/>
                    </StackPanel>
                </Grid>
                
                <Button Name="LoginButton"
                        Content="Sign Up"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="12"
                        Background="#5865F2" 
                        Foreground="White"
                        FontWeight="Bold"
                        CornerRadius="25"
                        Margin="0,10,0,0">
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="5">
                    <TextBlock Text="Already have an account?" Foreground="#B9BBBE" FontSize="12"/>
                    <TextBlock Text="Log In" Foreground="#EB459E" FontWeight="Bold" Cursor="Hand" FontSize="12"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
